<div class="flex">
  <div class="flex m-auto">
    <div class="m-auto">
      <table>
        <h5 class="text-center"><%=sessions.length %> sessions Available</h5>

        <% for( var i = 0 ; i < sessions.length ; i++) { %>
        <tr>
          <td>
            <a
              href="/sessions/<%=sessions[i].id %>"
              class="bg-sky-500 hover:bg-sky-700"
            >
              <div
                class="bg-white hover:bg-stone-50 border border-gray-600 text-teal-700 font-semibold rounded p-2 my-0.5 w-full"
              >
                <div class="mr-18 display: inline">
                  <%= new Date(sessions[i].playDate).toLocaleString('en-US', {
                  weekday: 'short', month: 'short', day: '2-digit', year:
                  'numeric', hour: '2-digit', minute: '2-digit', second:
                  '2-digit', hour12: true }) %>
                </div>

                <% if (sessions[i].playersneeded>1) { %>
                <div class="pl-5 pr-2 display: inline">
                  <%=sessions[i].playersneeded %> slots
                </div>
                <% } %> <% if (sessions[i].playersneeded===1) { %>

                <div class="text-red-600 pl-5 display: inline relative">
                  Last slot
                </div>
                <% } %> <% if (sessions[i].playersneeded ===0) { %>
                <div
                  class="text-green-1000 font-bold pl-5 pr-2 display: inline"
                >
                  Fully Booked
                </div>
                <% } %> <% if (sessions[i].isCanceled ===true ) { %>
                <div class="text-red-600 font-bold pl-5 pr-2 display: inline">
                  Canceled
                </div>
                <% } %>
              </div>
            </a>
          </td>
        </tr>
        <% } %>
      </table>
    </div>
  </div>
</div>
